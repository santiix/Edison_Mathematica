    <script is:client="load">
      function toggleFields() {
        const heightUnit = document.getElementById("heightUnit").value;
        document.getElementById("heightInput").placeholder = heightUnit === "cm" ? "e.g. 170" : "e.g. 5'9";
      }

      function parseHeight(input, unit) {
        if (unit === "cm") return parseFloat(input) / 100;

        input = input.trim()
          .replace(/[’‘`]/g, "'")
          .replace(/(feet|ft|inches|in|”|")/gi, "")
          .replace(/\s+/g, '');

        const regex = /^(\d+)'(\d+)?$/;
        const match = input.match(regex);

        if (match) {
          const feet = parseInt(match[1], 10);
          const inches = parseInt(match[2] || "0", 10);
          return (feet * 12 + inches) * 0.0254;
        }

        const numeric = parseFloat(input);
        if (unit === "feet" && numeric < 10) {
          return numeric * 12 * 0.0254;
        }

        return numeric * 0.0254;
      }

      function parseWeight(input, unit) {
        return unit === "kg" ? parseFloat(input) : parseFloat(input) * 0.453592;
      }

      function getMuscleAdjustment(level) {
        switch (level) {
          case "lean": return -1.5;
          case "mid": return 0.5;
          case "large": return 1.5;
          case "massive": return 3;
          default: return 0;
        }
      }

      function calculateBMI() {
        const heightUnit = document.getElementById("heightUnit").value;
        const weightUnit = document.getElementById("weightUnit").value;
        const heightVal = document.getElementById("heightInput").value;
        const weightVal = document.getElementById("weightInput").value;
        const muscleLevel = document.getElementById("muscleLevel").value;

        const resultEl = document.getElementById("bmiResult");
        const interpEl = document.getElementById("bmiInterpretation");

        resultEl.className = "result";
        interpEl.textContent = "";

        const heightM = parseHeight(heightVal, heightUnit);
        const weightKg = parseWeight(weightVal, weightUnit);

        if (!heightM || !weightKg || isNaN(heightM) || isNaN(weightKg)) {
          resultEl.textContent = "Please enter valid height and weight.";
          return;
        }

        let bmi = weightKg / (heightM * heightM);
        bmi += getMuscleAdjustment(muscleLevel);
        bmi = parseFloat(bmi.toFixed(1));

        let category = "";
        if (bmi < 18.5) category = "underweight";
        else if (bmi < 24.9) category = "healthy";
        else if (bmi < 29.9) category = "overweight";
        else category = "obese";

        resultEl.textContent = `Your BMI is ${bmi}`;
        interpEl.textContent = interpretBMI(bmi);
        resultEl.classList.add(getColorClass(category));
      }

      function interpretBMI(bmi) {
        if (bmi < 18.5) return "You are underweight.";
        if (bmi < 24.9) return "You are in the healthy range.";
        if (bmi < 29.9) return "You are overweight.";
        return "You are in the obese range.";
      }

      function getColorClass(category) {
        switch (category) {
          case "healthy": return "good";
          case "overweight": return "warning";
          case "obese": return "high";
          default: return "high";
        }
      }

      function resetForm() {
        document.getElementById("heightInput").value = "";
        document.getElementById("weightInput").value = "";
        document.getElementById("muscleLevel").value = "none";
        document.getElementById("bmiResult").textContent = "";
        document.getElementById("bmiInterpretation").textContent = "";
        document.getElementById("bmiResult").className = "result";
      }
    </script>
  </body>
</html>
