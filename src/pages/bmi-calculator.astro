<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>BMI Calculator - Edison Mathematica</title>
    <meta name="description" content="Calculate your Body Mass Index (BMI) using our simple, modern tool. Supports metric and imperial units." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "name": "BMI Calculator",
        "description": "Free BMI Calculator for accurate health insights"
      }
    </script>
    <style>
      body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f4f9f9;
        color: #333;
        margin: 0;
        padding: 0;
      }

      .container {
        max-width: 600px;
        margin: 4rem auto;
        padding: 2rem;
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      }

      h1 {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #507D7D;
      }

      label {
        display: block;
        margin-top: 1rem;
        font-weight: 600;
      }

      input, select {
        width: 100%;
        padding: 0.7rem;
        margin-top: 0.25rem;
        border: 1px solid #ccc;
        border-radius: 0.6rem;
        font-size: 1rem;
      }

      .button-group {
        display: flex;
        justify-content: space-between;
        margin-top: 2rem;
      }

      button {
        flex: 1;
        margin: 0 0.5rem;
        padding: 0.8rem;
        border: none;
        border-radius: 2rem;
        background-color: #A8DADC;
        color: #1d3557;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s;
      }

      button:hover {
        background-color: #89C2D9;
      }

      .result {
        margin-top: 2rem;
        text-align: center;
        font-size: 1.2rem;
        color: #2a9d8f;
        font-weight: bold;
      }

      .interpretation {
        margin-top: 1rem;
        text-align: center;
        font-size: 1rem;
        color: #457b9d;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <h1>BMI Calculator</h1>
      <label for="unit">Unit</label>
      <select id="unit" onchange="toggleUnits()">
        <option value="metric">Metric (kg, cm)</option>
        <option value="imperial">Imperial (lbs, inches)</option>
      </select>

      <div id="metric-fields">
        <label for="heightCm">Height (cm)</label>
        <input type="number" id="heightCm" placeholder="e.g. 170" />

        <label for="weightKg">Weight (kg)</label>
        <input type="number" id="weightKg" placeholder="e.g. 65" />
      </div>

      <div id="imperial-fields" style="display: none;">
        <label for="heightIn">Height (inches)</label>
        <input type="number" id="heightIn" placeholder="e.g. 67" />

        <label for="weightLb">Weight (lbs)</label>
        <input type="number" id="weightLb" placeholder="e.g. 150" />
      </div>

      <div class="button-group">
        <button onclick="calculateBMI()">Calculate</button>
        <button onclick="resetForm()">Reset</button>
      </div>

      <div class="result" id="bmiResult"></div>
      <div class="interpretation" id="bmiInterpretation"></div>
    </div>

    <script>
      function toggleUnits() {
        const unit = document.getElementById("unit").value;
        document.getElementById("metric-fields").style.display = unit === "metric" ? "block" : "none";
        document.getElementById("imperial-fields").style.display = unit === "imperial" ? "block" : "none";
        resetForm();
      }

      function calculateBMI() {
        const unit = document.getElementById("unit").value;
        let bmi = 0;

        if (unit === "metric") {
          const heightCm = parseFloat(document.getElementById("heightCm").value);
          const weightKg = parseFloat(document.getElementById("weightKg").value);
          if (heightCm && weightKg) {
            const heightM = heightCm / 100;
            bmi = weightKg / (heightM * heightM);
          }
        } else {
          const heightIn = parseFloat(document.getElementById("heightIn").value);
          const weightLb = parseFloat(document.getElementById("weightLb").value);
          if (heightIn && weightLb) {
            bmi = (weightLb / (heightIn * heightIn)) * 703;
          }
        }

        if (bmi > 0) {
          const result = bmi.toFixed(1);
          document.getElementById("bmiResult").textContent = `Your BMI is ${result}`;
          document.getElementById("bmiInterpretation").textContent = interpretBMI(bmi);
        } else {
          document.getElementById("bmiResult").textContent = "Please enter valid numbers.";
          document.getElementById("bmiInterpretation").textContent = "";
        }
      }

      function interpretBMI(bmi) {
        if (bmi < 18.5) return "You are underweight. Consider a nutrition plan.";
        else if (bmi < 24.9) return "You are in a healthy BMI range. Keep it up!";
        else if (bmi < 29.9) return "You are overweight. Consider some light exercise.";
        else return "You are in the obese range. Consult a healthcare provider.";
      }

      function resetForm() {
        document.querySelectorAll("input").forEach(i => i.value = "");
        document.getElementById("bmiResult").textContent = "";
        document.getElementById("bmiInterpretation").textContent = "";
      }
    </script>
  </body>
</html>
