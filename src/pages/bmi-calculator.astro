  <body>
    <div class="container">
      <h1>Body Weight Index Calculator</h1>

      <div class="selector">
        <div style="flex: 1">
          <label for="heightUnit">Height Unit</label>
          <select id="heightUnit" onchange="toggleFields()">
            <option value="cm">Centimeters (cm)</option>
            <option value="feet">Feet + Inches (e.g. 5'9)</option>
          </select>
        </div>
        <div style="flex: 1">
          <label for="weightUnit">Weight Unit</label>
          <select id="weightUnit" onchange="toggleFields()">
            <option value="kg">Kilograms (kg)</option>
            <option value="lbs">Pounds (lbs)</option>
          </select>
        </div>
      </div>

      <div id="heightFields">
        <label for="heightInput">Enter Height</label>
        <input type="text" id="heightInput" placeholder="e.g. 170 or 5'9" />
      </div>

      <label for="weightInput">Enter Weight</label>
      <input type="number" id="weightInput" placeholder="e.g. 65 or 150" />

      <label for="muscleLevel">Muscle Mass (optional)</label>
      <select id="muscleLevel">
        <option value="none">No Adjustment</option>
        <option value="lean">Lean (little muscle)</option>
        <option value="mid">Moderate (medium muscle)</option>
        <option value="large">Large (athletic build)</option>
        <option value="massive">Massive (bodybuilder)</option>
      </select>

      <div class="buttons">
        <button onclick="calculateBMI()">Calculate</button>
        <button onclick="resetForm()">Reset</button>
      </div>

      <div class="result" id="bmiResult"></div>
      <div class="interpretation" id="bmiInterpretation"></div>

      <div class="faq">
        <h2>Frequently Asked Questions</h2>
        <p><strong>What is BMI?</strong> BMI stands for Body Mass Index — a quick estimate of body fat based on height and weight.</p>
        <p><strong>Is this a body weight index calculator?</strong> Yes — body weight index and BMI are the same thing.</p>
        <p><strong>How can I enter height like 5'9?</strong> Just type it that way! This tool converts 5'9 to inches behind the scenes.</p>
        <p><strong>Can I compute BMI for bodybuilders?</strong> Yes — use the muscle mass adjustment dropdown for better results.</p>
        <p><strong>What's the most accurate BMI calculator?</strong> One that includes muscle mass — like this one!</p>
        <p><strong>What’s a healthy BMI?</strong> Between 18.5 and 24.9 is generally considered healthy.</p>
        <p><strong>Is this the same as a 'bmi calculator calculator'?</strong> Yes — you can call it that. Search engines do!</p>
        <p><strong>What is the 'biomass index calculator'?</strong> Often a search synonym for BMI — this calculator covers that too.</p>
      </div>
    </div>

    <script>
      function toggleFields() {
        const heightLabel = document.getElementById("heightInput");
        const unit = document.getElementById("heightUnit").value;
        heightLabel.placeholder = unit === "cm" ? "e.g. 170" : "e.g. 5'9";
      }

      function parseHeight(input, unit) {
        if (unit === "cm") {
          return parseFloat(input) / 100; // cm to meters
        }
        // Try parsing 5'9
        const regex = /^(\d+)'(\d+)?$/;
        const match = input.trim().match(regex);
        if (match) {
          const feet = parseInt(match[1], 10);
          const inches = parseInt(match[2] || "0", 10);
          const totalInches = feet * 12 + inches;
          return totalInches * 0.0254;
        }
        return parseFloat(input) * 0.0254; // fallback if only inches
      }

      function parseWeight(input, unit) {
        return unit === "kg" ? parseFloat(input) : parseFloat(input) * 0.453592;
      }

      function getMuscleAdjustment(level) {
        switch (level) {
          case "lean": return -1.5;
          case "mid": return 0.5;
          case "large": return 1.5;
          case "massive": return 3;
          default: return 0;
        }
      }

      function calculateBMI() {
        const heightUnit = document.getElementById("heightUnit").value;
        const weightUnit = document.getElementById("weightUnit").value;
        const heightVal = document.getElementById("heightInput").value;
        const weightVal = document.getElementById("weightInput").value;
        const muscleLevel = document.getElementById("muscleLevel").value;

        const heightM = parseHeight(heightVal, heightUnit);
        const weightKg = parseWeight(weightVal, weightUnit);

        if (!heightM || !weightKg) {
          document.getElementById("bmiResult").textContent = "Please enter valid height and weight.";
          return;
        }

        let bmi = weightKg / (heightM * heightM);
        bmi += getMuscleAdjustment(muscleLevel);

        const bmiText = `Your BMI is ${bmi.toFixed(1)}`;
        document.getElementById("bmiResult").textContent = bmiText;
        document.getElementById("bmiInterpretation").textContent = interpretBMI(bmi);
      }

      function interpretBMI(bmi) {
        if (bmi < 18.5) return "You are underweight.";
        if (bmi < 24.9) return "You are in the healthy range.";
        if (bmi < 29.9) return "You are overweight.";
        return "You are in the obese range.";
      }

      function resetForm() {
        document.getElementById("heightInput").value = "";
        document.getElementById("weightInput").value = "";
        document.getElementById("muscleLevel").value = "none";
        document.getElementById("bmiResult").textContent = "";
        document.getElementById("bmiInterpretation").textContent = "";
      }
    </script>
  </body>
