  <body style="font-family: sans-serif; margin: 0; background: #f6f6f6;">

    <header style="text-align: center; padding: 2rem 1rem;">
      <h1>Edison Mathematica</h1>
      <p>Your source for simple, helpful calculators</p>
    </header>

    <main style="display: flex; flex-direction: row; justify-content: center;">

      <!-- Left AdSense Space -->
      <aside style="width: 160px; margin-right: 1rem;">
        <!-- Google AdSense code will go here -->
      </aside>

      <!-- Tool Tiles Grid -->
      <section style="max-width: 900px; display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1rem; padding: 1rem;">
        {tools.map(tool => (
          <a href={tool.url} style="display: block; background: white; border-radius: 8px; padding: 1rem; box-shadow: 0 0 10px rgba(0,0,0,0.1); text-decoration: none; color: black;">
            <h2 style="margin-top: 0;">{tool.title}</h2>
            <p>{tool.desc}</p>
          </a>
        ))}
      </section>

      <!-- Right AdSense Space -->
      <aside style="width: 160px; margin-left: 1rem;">
        <!-- Google AdSense code will go here -->
      </aside>

    </main>

    <footer style="text-align: center; padding: 2rem 1rem; font-size: 0.9rem; color: #666;">
